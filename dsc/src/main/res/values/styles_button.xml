<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DscTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/size_3xlg</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/DscTheme.Font.Body1.SemiBold</item>
        <item name="android:paddingStart">@dimen/size_md</item>
        <item name="android:paddingEnd">@dimen/size_md</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="DscTheme.Button.Primary" parent="DscTheme.Button">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="buttonStyleName">PRIMARY</item>
        <item name="progressColorName">CIRCLE_SUPPORT100</item>
    </style>

    <style name="DscTheme.Button.Primary.Small" parent="DscTheme.Button.Primary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_xlg</item>
        <item name="android:textAppearance">@style/DscTheme.Font.Caption.SemiBold</item>
    </style>

    <style name="DscTheme.Button.Primary.Flow" parent="DscTheme.Button.Primary">
        <item name="icon">@drawable/ic_long_arrow_right</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/size_md</item>
        <item name="android:gravity">start|center</item>
        <item name="buttonStyleName">PRIMARY_FLOW</item>
    </style>

    <style name="DscTheme.Button.Primary.Flow.Small" parent="DscTheme.Button.Primary.Flow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_xlg</item>
        <item name="android:textAppearance">@style/DscTheme.Font.Caption.SemiBold</item>
    </style>

    <style name="DscTheme.Button.Secondary" parent="DscTheme.Button.Primary">
        <item name="android:background">@drawable/bg_button_secundary</item>
        <item name="android:textColor">@drawable/bt_secundary_text_color</item>
        <item name="buttonStyleName">SECONDARY</item>
        <item name="progressColorName">CIRCLE_PRIMARY300</item>
    </style>

    <style name="DscTheme.Button.Secondary.Small" parent="DscTheme.Button.Secondary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_xlg</item>
        <item name="android:textAppearance">@style/DscTheme.Font.Caption.SemiBold</item>
    </style>

    <style name="DscTheme.Button.Secondary.Flow" parent="DscTheme.Button.Primary.Flow">
        <item name="android:background">@drawable/bg_button_secundary</item>
        <item name="android:textColor">@drawable/bt_secundary_text_color</item>
        <item name="iconTint">@drawable/bt_outlined_text_color</item>
        <item name="buttonStyleName">SECONDARY_FLOW</item>
        <item name="progressColorName">CIRCLE_PRIMARY300</item>
    </style>

    <style name="DscTheme.Button.Secondary.Flow.Small" parent="DscTheme.Button.Secondary.Flow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_xlg</item>
        <item name="android:textAppearance">@style/DscTheme.Font.Caption.SemiBold</item>
    </style>

    <style name="DscTheme.Button.Outlined" parent="DscTheme.Button.Primary">
        <item name="android:background">@drawable/bg_button_outlined</item>
        <item name="android:textColor">@drawable/bt_outlined_text_color</item>
        <item name="buttonStyleName">OUTLINED</item>
        <item name="progressColorName">CIRCLE_PRIMARY300</item>
    </style>

    <style name="DscTheme.Button.Outlined.Small" parent="DscTheme.Button.Outlined">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_xlg</item>
        <item name="android:textAppearance">@style/DscTheme.Font.Caption.SemiBold</item>
    </style>

    <style name="DscTheme.Button.Outlined.Flow" parent="DscTheme.Button.Primary.Flow">
        <item name="android:background">@drawable/bg_button_outlined</item>
        <item name="android:textColor">@drawable/bt_outlined_text_color</item>
        <item name="iconTint">@drawable/bt_outlined_text_color</item>
        <item name="buttonStyleName">OUTLINED_FLOW</item>
        <item name="progressColorName">CIRCLE_PRIMARY300</item>
    </style>

    <style name="DscTheme.Button.Outlined.Flow.Small" parent="DscTheme.Button.Outlined.Flow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_xlg</item>
        <item name="android:textAppearance">@style/DscTheme.Font.Caption.SemiBold</item>
    </style>

    <style name="DscTheme.Button.Outlined.Light" parent="DscTheme.Button.Primary">
        <item name="android:background">@drawable/bg_button_outlined_light</item>
        <item name="android:textColor">@color/support100</item>
        <item name="buttonStyleName">OUTLINED_LIGHT</item>
        <item name="progressColorName">CIRCLE_SUPPORT100</item>
    </style>

    <style name="DscTheme.Button.Outlined.Light.Small" parent="DscTheme.Button.Outlined.Light">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_xlg</item>
        <item name="android:textAppearance">@style/DscTheme.Font.Caption.SemiBold</item>
    </style>

    <style name="DscTheme.Button.Outlined.Light.Flow" parent="DscTheme.Button.Primary.Flow">
        <item name="android:background">@drawable/bg_button_outlined_light</item>
        <item name="android:textColor">@color/support100</item>
        <item name="iconTint">@color/support100</item>
        <item name="buttonStyleName">OUTLINED_LIGHT_FLOW</item>
        <item name="progressColorName">CIRCLE_SUPPORT100</item>
    </style>

    <style name="DscTheme.Button.Outlined.Light.Flow.Small" parent="DscTheme.Button.Outlined.Light.Flow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_xlg</item>
        <item name="android:textAppearance">@style/DscTheme.Font.Caption.SemiBold</item>
    </style>

    <style name="DscTheme.Button.Rectangle.Flow" parent="DscTheme.Button.Primary.Flow">
        <item name="android:background">@drawable/bg_button_rectangle</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="buttonStyleName">RECTANGLE_FLOW</item>
    </style>

    <style name="DscTheme.Button.TextButton" parent="DscTheme.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/DscTheme.Font.Body1</item>
        <item name="android:paddingStart">@dimen/size_2xsm</item>
        <item name="android:paddingEnd">@dimen/size_2xsm</item>
        <item name="android:textColor">@drawable/bt_outlined_text_color</item>
        <item name="android:background">@drawable/bg_button_text</item>
    </style>

    <style name="DscTheme.Button.TextButton.IconStart" parent="DscTheme.Button.TextButton">
        <item name="icon">@drawable/ic_indicator_arrow_left</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@drawable/bt_outlined_text_color</item>
        <item name="iconPadding">@dimen/size_xsm</item>
    </style>

    <style name="DscTheme.Button.TextButton.IconEnd" parent="DscTheme.Button.TextButton.IconStart">
        <item name="icon">@drawable/ic_indicator_arrow_right</item>
        <item name="iconGravity">end</item>
    </style>

    <style name="DscTheme.Button.TextButton.Small" parent="DscTheme.Button.TextButton">
        <item name="android:textAppearance">@style/DscTheme.Font.Body2</item>
    </style>

    <style name="DscTheme.Button.TextButton.IconStart.Small" parent="DscTheme.Button.TextButton.IconStart">
        <item name="android:textAppearance">@style/DscTheme.Font.Body2</item>
        <item name="iconSize">@dimen/size_sm</item>
        <item name="iconPadding">@dimen/size_2xsm</item>
    </style>

    <style name="DscTheme.Button.TextButton.IconEnd.Small" parent="DscTheme.Button.TextButton.IconEnd">
        <item name="android:textAppearance">@style/DscTheme.Font.Body2</item>
        <item name="iconSize">@dimen/size_sm</item>
        <item name="iconPadding">@dimen/size_2xsm</item>
    </style>

    <style name="DscTheme.IconButton">
        <item name="android:layout_width">@dimen/size_xlg</item>
        <item name="android:layout_height">@dimen/size_xlg</item>
        <item name="android:background">@drawable/bg_ripple_circle</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/size_lg</item>
    </style>

    <attr name="buttonPrimaryStyle" format="reference" />
    <attr name="buttonPrimaryFlowStyle" format="reference" />
    <attr name="buttonSecondaryStyle" format="reference" />
    <attr name="buttonSecondaryFlowStyle" format="reference" />
    <attr name="buttonOutlinedStyle" format="reference" />
    <attr name="buttonOutlinedFlowStyle" format="reference" />
    <attr name="buttonOutlinedLightStyle" format="reference" />
    <attr name="buttonOutlinedLightFlowStyle" format="reference" />
    <attr name="buttonRectangleFlowStyle" format="reference" />

    <declare-styleable name="ProgressButton">
        <attr name="buttonStyleName" format="string" />
        <attr name="buttonText" format="string" />
        <attr name="progressText" format="string" />
        <attr name="progressColorName" format="string" />
    </declare-styleable>

</resources>