<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <item android:state_enabled="true">
        <ripple android:color="?attr/colorControlHighlight" tools:targetApi="lollipop">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/radius_md" />
                    <solid android:color="@color/support300" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/radius_md" />
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="@dimen/line_md" android:color="@color/support300" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>
