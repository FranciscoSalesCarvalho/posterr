<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <item android:state_enabled="true">
        <ripple android:color="?attr/colorControlHighlight" tools:targetApi="lollipop">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/radius_xxlg" />
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/radius_xxlg" />
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="@dimen/line_md" android:color="?attr/colorPrimaryVariant" />
                </shape>
            </item>
        </ripple>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_xxlg" />
            <solid android:color="@android:color/transparent" />
            <stroke android:width="@dimen/line_md" android:color="@color/primary100" />
        </shape>
    </item>
</selector>